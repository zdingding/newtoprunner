<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
                android:background="#21242e"
             tools:context=".fragment.DiscoverFragment"
             android:id="@+id/discover">
        <com.toprunner.ubii.toprunner.view.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/headimage"
           android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ren"/>
        <RelativeLayout
            android:id="@+id/rl_nickname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/headimage"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/nickname"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:text="昵称"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_toRightOf="@id/nickname"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/gaidongbi"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_text"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/kapian"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_above="@id/rl_nickname">

            <TextView
                android:id="@+id/sextext"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/sex_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/sex_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="性别"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_alignBaseline="@+id/sextext"
                android:layout_alignBottom="@+id/sextext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/gaidongbi"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/mHeight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="170"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/tv_mHeight"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_mHeight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text="身高"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_alignBaseline="@+id/mHeight"
                android:layout_alignBottom="@+id/mHeight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/gaidongbi"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_weight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:text="体重(kg)"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/num_weight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@id/tv_weight"
                android:text="50"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/gaidongbi"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_age"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:text="年龄"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/text_age"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/tv_age"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:text="18"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/gaidongbi"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/test_scan_qrcode"
            style="@style/MatchWrapTv"
            android:text="扫一扫" />
    </LinearLayout>
</RelativeLayout>


