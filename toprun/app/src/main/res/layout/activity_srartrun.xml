<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_srartrun"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#21242E"
    tools:context="com.toprunner.ubii.toprunner.activivty.SrartrunActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">
        <TextView
            android:id="@+id/tv_daohang"
            style="@style/TitleAndContentTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_eight"
            android:text="@string/daohang"
            android:textSize="18sp"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/is_daohang"
            style="@style/TipsOrModerateTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_daohang"
            android:layout_marginLeft="@dimen/spacing_eight"
            android:text="@string/isopendaohang"
            android:textColor="#ffffff" />

        <com.toprunner.ubii.toprunner.view.SlideButton
            android:id="@+id/sb_daohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_eight"
            android:clickable="true"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">
        <TextView
            android:id="@+id/tv_guiji"
            style="@style/TitleAndContentTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_eight"
            android:text="@string/guiji"
            android:textSize="18sp"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/tv_desc"
            style="@style/TipsOrModerateTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_guiji"
            android:layout_marginLeft="@dimen/spacing_eight"
            android:text="@string/isguiji"
            android:textColor="#ffffff" />

        <com.toprunner.ubii.toprunner.view.SlideButton
            android:id="@+id/sb_guiji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_eight"
            android:clickable="true"
        />
    </RelativeLayout>
    <Button
        android:id="@+id/go"
        android:text="Go"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
